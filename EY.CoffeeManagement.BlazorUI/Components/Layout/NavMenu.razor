@using Orientation = Radzen.Orientation
<RadzenHeader>
    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
        <RadzenSidebarToggle Click="@(() => isExpanded = !isExpanded)"/>
        <RadzenLabel Text="Header"/>
    </RadzenStack>
</RadzenHeader>
<RadzenSidebar
    Responsive="false"
    @bind-Expanded="isExpanded">
    <RadzenPanelMenu
        ShowArrow="false">
        <RadzenPanelMenuItem Text="Home" Icon="home" Path="/"/>
        <RadzenPanelMenuItem Text="Yönetim">
            <RadzenPanelMenuItem Text="Ürün Kategorileri" Path="/ProductCategories"/>
            <RadzenPanelMenuItem Text="Ürünler" Path="/Products"/>
        </RadzenPanelMenuItem>
    </RadzenPanelMenu>
</RadzenSidebar>

@code {
    private bool isExpanded = true;
}